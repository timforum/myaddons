<record model="ir.ui.view" id="invoice_search_view">
<field name="name">cn_invoice.search</field>
<field name="model">cn.invoice</field>
<field name="arch" type="xml">
    <search>
        <field name="customer_net_id"/>
        <field name="tax_id"/>
        <field name="email"/>
        <field name="order_no"/>
         <field name="to_company"/>
    </search>
</field>
</record>


