<odoo>
  <data>

    <record model="ir.ui.view" id="afters.list">
      <field name="name">aftersale list</field>
      <field name="model">afters</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="serial_no"/>
          <field name="order_no"/>
          <field name="purchase_date"/>
          <field name="using_dates"/>
          <field name="request_date"/>
          <field name="weixin_no"/>
          <field name="priorit"/>
          <field name="problem"/>
          <field name="note"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="afters.list">
      <field name="name">aftersale list</field>
      <field name="model">afters</field>
      <field name="arch" type="xml">
        <form string="invoice_form1">

          <field name="name"/>
          <field name="serial_no"/>
          <field name="order_no"/>
          <field name="purchase_date"/>
          <field name="using_dates"/>
          <field name="request_date"/>
          <field name="weixin_no"/>
          <field name="priorit"/>
          <field name="problem"/>
          <field name="note"/>
          <field name="products_line"/>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.ui.view" id="aftersale.products_list">
      <field name="name">products list</field>
      <field name="model">aftersale.products</field>
      <field name="arch" type="xml">
        <tree>
          <field name="sku"/>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="aftersale.products_list">
      <field name="name">products list</field>
      <field name="model">aftersale.products</field>
      <field name="arch" type="xml">

        <form>
          <field name="sku"/>
          <field name="name"/>
        </form>

      </field>
    </record>


    <!-- actions opening views on models -->



    <record model="ir.actions.act_window" id="aftersale.products_action_window">
      <field name="name">aftersale products window</field>
      <field name="res_model">aftersale.products</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="afters.action_window">
      <field name="name">aftersale window</field>
      <field name="res_model">afters</field>
      <field name="view_mode">tree,form</field>
    </record>


